<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mastermoviles.persistencia.sqlite">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <permission android:name="com.mastermoviles.READ_DATABASE" android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sqlite">
        <activity android:name=".UserManagement.UserActivity"></activity>
        <activity android:name=".UserManagement.ListActivity" />
        <activity android:name=".UserManagement.UpdateActivity" />
        <activity android:name=".UserManagement.AddActivity" />
        <activity android:name=".UserManagement.ManagementActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="com.mastermoviles.persistencia.sqlite.Provider.UsersProvider"
            android:name="com.mastermoviles.persistencia.sqlite.Provider.UsersProvider"
            android:readPermission="com.mastermoviles.READ_DATABASE"
            android:grantUriPermissions="true"
            android:enabled="true"
            android:exported="true"
            android:multiprocess="true" />
    </application>



</manifest>