<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto"
        android:textSize="20sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="Introduce un texto"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="15sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15sp" />

    <TextView
        android:id="@+id/seekSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TamaÃ±o (32/50)"
        android:textSize="20sp"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:min="1"
        android:max="50"
        android:progress="32"
        android:layout_marginTop="10sp"
        android:layout_below="@id/seekSize"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/applyChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicar y viusualizar"
        android:textSize="15sp"
        android:layout_marginTop="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/seekBar" />


    <TextView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:inputType="textMultiLine"
        android:layout_marginTop="30sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/applyChanges"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/changeVersion"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10sp"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cerrar"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10sp" />
</RelativeLayout>